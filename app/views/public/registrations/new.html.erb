<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="m-3">新規会員登録</h4>
    </div>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "川越" %>
    </div>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "ときも" %>
    </div>

    <div class="field">
      <%= f.label :last_name_kana %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "カワゴエ" %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "トキモ" %>
    </div>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "お芋さん" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "kawagoe@xx.jp" %>
    </div>

    <div class="field">
      <%= f.label :telephone_number %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

</div>