<% if @range == "User" %>
  <!--検索対象モデルがUser-->
<h2>User search for "<%= params[:word] %>"</h2>
<table class="table table-hover table-inverse">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username %></td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
</table>


  <!--検索対象モデルがPost-->
<h2>Post search for "<%= params[:word] %>"</h2>
<table class="table table-hover table-inverse">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= image_tag(post.image) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>