<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4 class="m-3">下書き一覧</h4>
       <!--部分テンプレート 下書き一覧-->
      <%= render 'public/posts/confirm', posts: @posts %>
    </div>

    <div class="col-md-8 offset-md-2">
      <h4 class="m-3">投稿編集</h4>
        <%= render 'layouts/errors', obj: @post %>
          <div class="col-md-8 mt-3">
            <div class="mx-auto">
              <%= form_with model: @post do |f| %>
                <table class="table table-borderless mt-3">
                  <% if @post.image.attached? %>
                    <tr>
                      <td colspan="2"><%= image_tag @post.image ,size: "300x300" %></td>
                    </tr>
                  <% end %>
                  <tr>
                    <td><%= f.label :投稿画像 %></td>
                    <td><%= f.file_field :image, accept: "image/*" %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :キャプション %></td>
                    <td><%= f.text_area :text, class: "form-control text" %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :カテゴリーを選択 %></td>
                    <td><%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "--選択してください--" %></td>
                  </tr>
                </table>
                <div class="row">
                  <div class="col-md-10">
                    <%= f.submit '更新する', class: "btn btn-success btn-sm" %>
                    <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-25"} %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
</div>