<div class="container">
    <div class="row">
        <% @posts.each do |post| %>
        <div class="col-md-4">

            <div>
                <%= link_to post_path(post.id) do %>
                    <%= image_tag(post.image) %>
                <% end %>
            </div>

        </div>
        <% end %>
    </div>
</div>

