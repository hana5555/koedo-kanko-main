<div>
    <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-2 col-sm-3 my-2">
      <!--部分テンプレート カテゴリー検索機能-->
      <%= render 'public/posts/category_index', category: @categories %>
    </div>

    <div class="col-md-10 col-sm-9 my-2">
      <div class="row">
        <% @posts.each do |post| %>
          <% if post.image.attached? %>
            <div class="col-lg-3 col-md-5 col-sm-12 mt-3">
              <%= link_to post_path(post.id) do %>
                <%= image_tag (post.image), size: "200x200" %>
              <% end %>
            </div>
          <% else %>
            <p>投稿はまだありません。</p>
          <% end %>
        <% end %>
      </div>
      <div class="pagination justify-content-center mt-3">
        <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
    </div>
    </div>
  </div>
</div>

