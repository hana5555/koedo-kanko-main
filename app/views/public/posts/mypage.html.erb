<div class="container">
  <div class="row">
    <div class="col-md-2 col-sm-3 my-2">
      <!--部分テンプレート カテゴリー検索機能-->
      <%= render 'public/posts/category_index', category: @category %>
    </div>

    <div class="col-md-10 col-sm-9 my-2">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-lg-3 col-md-5 col-sm-12 mt-3">
            <%= link_to post_path(post.id) do %>
              <%= image_tag (post.image), size: "200x200" %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-md-3 mt-3">
        <p><%= link_to "お気に入り一覧へ", favorites_user_path(@user), class: "btn btn-primary" %></p>
      </div>
      <div class="pagination justify-content-center mt-2">
        <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>

