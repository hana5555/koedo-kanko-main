<div class="container">
    <div class="row">
        <div class="col-md-3">

            <!--部分テンプレート カテゴリー検索機能-->
            <%= render 'public/posts/category_index', category: @category %>
        </div>

        <% @posts.each do |post| %>
        <div class="col-md-4">
            <div>
                <%= link_to post_path(post.id) do %>
                    <%= image_tag(post.image) %>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
    <div class="row">
        <p><%= link_to "お気に入り一覧へ", favorites_user_path(@user) %></p>
        <div class="pagination justify-content-center mt-2">
          <%= paginate @posts %>
        </div>
    </div>
</div>

