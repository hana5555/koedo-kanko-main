<div class="container">
  <div class="row">
    <div class="col-md-2 col-sm-3 my-2">
      <!--部分テンプレート カテゴリー検索機能-->
      <%= render 'admin/posts/category_index', category: @category %>
    </div>

    <div class="col-md-8 col-sm-7 my-2">
      <div class="row">
        <%= image_tag @post.image, width: "100%" %>
      </div>

      <div class="row mt-3 ml-5">
        <%= @post.user.username %>
        <%= @post.created_at.strftime('%Y/%m/%d') %>
      </div>

      <div class="row mt-1 mb-3 ml-5">
        <%= @post.text %>
      </div>

      <%= form_with(model: [ :admin, @post ]) do |f| %>
      <div class="row mt-1 mb-3 ml-5">
        <%= f.label :公開ステータス %>
        <%= f.radio_button :is_displayed, :true, checked: true %>
        <%= f.label :status_true, "公開" %>
        <%= f.radio_button :is_displayed, :false %>
        <%= f.label :status_false, "非公開" %>
      </div>

      <div class="row mt-1 mb-3 ml-5">
        <%= f.submit '更新する', class: "btn btn-success btn-sm" %>
      </div>
        <% end %>
    </div>
  </div>
</div>
