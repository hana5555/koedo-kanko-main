<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-6">
      <h4 class="my-5">コメント履歴詳細</h4>

      <table class='table table-hover table-inverse col-md-6 col-sm-6'>
        <tbody>
          <tr>
            <td>コメント日時</td>
            <td><%= @comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @comment.user.full_name %></td>
          </tr>
          <tr>
            <td>アカウント名</td>
            <td><%= @comment.user.username %></td>
          </tr>
          <tr>
            <td>コメント内容</td>
            <td><%= @comment.comment %></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="col-md-3 mt-4">
         <%= link_to "削除する", admin_comment_path(@comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-sm-6">
      <h5 class="my-5">コメントされた投稿</h5>
      <div class="row">
        <%= image_tag @comment.post.image, size: "300x300" %>
      </div>
      <div class="row">
        <div class="col-md-6 my-3">
          <%= @comment.post.user.username %>：
          <%= @comment.post.created_at.strftime('%Y/%m/%d') %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 my-3">
          <%= @comment.post.text %>
        </div>
      </div>
    </div>
  </div>
</div>