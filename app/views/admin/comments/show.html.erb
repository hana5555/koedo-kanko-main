<div class="container">
  <div class="row">
    <h4 class="m-5">コメント履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col-6">
      <table class='table table-hover table-inverse col-sm-5'>
        <tbody>
          <tr>
            <td>コメント投稿日時</td>
            <td><%= @comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @comment.user.full_name %></td>
          </tr>
          <tr>
            <td>アカウント名</td>
            <td><%= @comment.user.username %></td>
          </tr>
          <tr>
            <td>コメント内容</td>
            <td><%= @comment.comment %></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
         <%= link_to "削除する", admin_comment_path(@comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-success" %>
      </div>
    </div>


    <div class="col-6">
      <div class="row">
        <h5>コメントされた投稿</h5>
      </div>
      <div class="row">
        <%= image_tag @comment.post.image, size: "300x300" %>
      </div>
      <div class="row">
        <%= @comment.post.user.username %>：
        <%= @comment.post.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="row">
        <%= @comment.post.text %>
      </div>
    </div>
  </div>
</div>