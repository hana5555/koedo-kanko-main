<div class="container">
  <div class="row">
    <div class="col-md-5 my-3">
      <h4 class="m-3"><%= image_tag "post.edit.jpg", size: "300x100" %></h4>
    </div>
  </div>

  <div>
    <%= render "admin/shared/error_messages", resource: @user %>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>会員ID</label>
    </div>
    <div class="col-sm-4">
      <%= @user.id %>
    </div>
  </div>

  <%= form_with(model: [:admin,@user]) do |f| %>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>氏名(姓)</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :last_name %>
    </div>
    <div class="col-sm-3">
      <label>氏名(名)</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>フリガナ(セイ)</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :last_name_kana %>
    </div>
    <div class="col-sm-3">
      <label>フリガナ(メイ)</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>アカウント名</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>メールアドレス</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>電話番号</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>会員ステータス</label>
    </div>
    <div class="col-sm-4">
      <%= f.radio_button :is_deleted, :false, checked: true %>
      <%= f.label :status_false, "有効" %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :status_true, "退会" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 offset-2 mt-2 my-5">
      <%= f.submit "変更を保存", class: 'btn btn-block btn-success' %>
    </div>
  </div>
  <% end %>
</div>