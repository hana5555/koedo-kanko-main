<div class="container">
  <div class="row">
    <h4 class="col-md-4 my-3">
      <%= @user.username %>さんの会員情報詳細
    </h4>
    <div class="col-md-3 col-sm-4 offset-5 my-4">
      <%= link_to 'アカウント情報を編集する', edit_admin_user_path(@user), class: "btn btn-sm btn-block btn-success"%>
    </div>
  </div>

  <table class='table table-hover table-inverse col-sm-5'>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @user.full_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
      </tr>
      <tr>
        <td>アカウント名</td>
        <td><%= @user.username %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @user.telephone_number %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @user.is_deleted == true %>
            <p class="text-secondary">退会</p>
          <% else %>
            <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <div class="col-sm-4 offset-1 mt-3 mb-2">
      <%= link_to "投稿一覧ページ", userpage_path(@user), class: "btn btn-sm btn-block btn-secondary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 offset-1 mt-3 mb-5">
      <%= link_to "コメント履歴一覧ページ", commentpage_path(@user), class: "btn btn-sm btn-block btn-secondary" %>
    </div>
  </div>
</div>